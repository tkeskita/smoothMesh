actions
(
    // front side
    {
        name    frontSet;
        set     frontSet;
        type    faceSet;
        action  new;
        source  boxToFace;
        box     (-1.01 -1.01 -10) (1.01 -0.99 10);
    }

    // back side
    {
        name    backSet;
        set     backSet;
        type    faceSet;
        action  new;
        source  boxToFace;
        box     (-1.01 0.99 -10) (1.01 1.01 10);
    }

    // left side
    {
        name    leftSet;
        set     leftSet;
        type    faceSet;
        action  new;
        source  boxToFace;
        box     (-1.01 -1.01 -10) (-0.99 1.01 10);
    }

    // right side
    {
        name    rightSet;
        set     rightSet;
        type    faceSet;
        action  new;
        source  boxToFace;
        box     (0.99 -1.01 -10) (1.01 1.01 10);
    }
);


